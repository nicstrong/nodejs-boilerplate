{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:esbuild": "node ./build/esbuild.mjs --dev --watch",
    "dev:node": "node --watch dist/index.js",
    "dev": "run-p dev:*",
    "build": "node ./build/esbuild.mjs --dev",
    "build:prod": "node ./build/esbuild.mjs",
    "build:meta": "node ./build/esbuild.mjs --dev --meta",
    "build:meta:prod": "node ./build/esbuild.js --meta",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  }
}
